<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <sc.variable name="dataFolder">
      <patch:attribute name="value">E:\Local_Projects\Sitecore8Helix\Data</patch:attribute>
    </sc.variable>
    <sc.variable name="sourceFolder">E:\Local_Projects\Sitecore8Helix\Src</sc.variable>
    <sites>
      <site name="website">
        <patch:attribute name="database">master</patch:attribute>
      </site>
    </sites>
    <contentSearch>
      <indexConfigurations>
        <fieldMap type="Sitecore.ContentSearch.SolrProvider.SolrFieldMap, Sitecore.ContentSearch.SolrProvider">
          <fieldNames hint="raw:AddFieldByFieldName">
            <field fieldName="Country"              returnType="string" />
            <field fieldName="City"                 returnType="string" />
            <field fieldName="Street"               returnType="string" />
            <field fieldName="Street Number"        returnType="string" />
            <field fieldName="Zip Code"             returnType="string" />
            <field fieldName="Store Type"           returnType="string" />
          </fieldNames>
        </fieldMap>
      </indexConfigurations>
    </contentSearch>
  </sitecore>
</configuration>