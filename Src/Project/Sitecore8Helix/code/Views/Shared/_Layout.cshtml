<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sitecore8Helix</title>
    <style>

    @@font-face {
  font-family: 'MyWebFont';
  src:  url('myfont.woff2') format('woff2'),
        url('myfont.woff') format('woff');
}

        .product-list {
            display: flex;
            flex-flow: row wrap;
        }

        .product-list__product {
            width: 250px;
        }

        .selected-facets__selected-facet {
            border: 1px solid black;
            max-width: 100px;
            cursor: pointer;
        }

        .cart {
            display: flex;
            flex-flow: row nowrap;
            justify-content: space-between;
            border: 1px solid black;
            margin: 10px;
        }

        .cart__products {
            display: flex;
            flex-flow: row wrap;
        }


        .cart__product {
            margin-left: 25px;
            cursor: pointer;
        }

        .product-list__product--selected {
            background-color: aqua;
        }

        .product-search__meta {
            display: flex;
            justify-content: space-between;
            margin: 0 30px;
        }

        .display-errors {
            color: red;
        }

    </style>
    <link type="text/css" rel="stylesheet" href="~/dist/css/styles.css"/>
</head>
<body>
<div>
    @Html.Sitecore().Placeholder("main")
</div>

<script src="~/dist/js/bundle.js"></script>
</body>
</html>
