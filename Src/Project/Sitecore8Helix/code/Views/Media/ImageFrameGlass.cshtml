@using Sitecore8Helix.Feature.Media.Models
@using Sitecore8Helix.Foundation.Presentation.Interfaces
@model Sitecore8Helix.Foundation.Presentation.Models.PresentationModel<ImageFrame, IPresentationRenderingParameters>

<div class="@Model.RenderingParams.GridSize.Size">
    <h3>@Html.Glass().Editable(Model.Data, imageFrame => imageFrame.Title)</h3>
    <p>@Html.Glass().Editable(Model.Data, imageFrame => imageFrame.Manchet)</p>
    @Html.Glass().RenderImage(Model.Data, imageFrame => imageFrame.Image, new { @class = "img-fluid img-thumbnail" }, true)
</div>
